<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MenuNavigatorTheme" parent="android:Theme.NoTitleBar">
        <!-- Breadcrumb layout -->
        <item name="menuNavigator.breadcrumbPadding">2dip</item>
        <item name="menuNavigator.breadcrumbBackground">@android:color/darker_gray</item>
        <!-- Breadcrumb text item view -->
        <item name="menuNavigator.breadcrumbTextViewPadding">1dip</item>
        <item name="menuNavigator.breadcrumbTextViewTextColor">@android:color/black</item>
        <item name="menuNavigator.breadcrumbTextViewTextSize">24dip</item>
        <item name="menuNavigator.breadcrumbImageViewPadding">1dip</item>
        <!-- Icons view -->
        <item name="menuNavigator.iconsTextViewPadding">1dip</item>
        <item name="menuNavigator.iconsTextViewTextColor">@android:color/black</item>
        <item name="menuNavigator.iconsTextViewTextSize">14dip</item>
        <item name="menuNavigator.iconsImageViewPadding">1dip</item>
        <item name="menuNavigator.iconBackground">@android:color/white</item>
        <!-- String view -->
        <item name="menuNavigator.stringEditTextPadding">1dip</item>
        <item name="menuNavigator.stringEditTextTextColor">@android:color/black</item>
        <item name="menuNavigator.stringEditTextTextSize">24dip</item>
        <item name="menuNavigator.stringTableMargin">1dip</item>
        <item name="menuNavigator.stringTablePadding">5dip</item>
        <!-- Number view -->
        <item name="menuNavigator.numberEditTextPadding">1dip</item>
        <item name="menuNavigator.numberEditTextTextColor">@android:color/black</item>
        <item name="menuNavigator.numberEditTextTextSize">24dip</item>
        <item name="menuNavigator.numberTableMargin">1dip</item>
        <item name="menuNavigator.numberTablePadding">5dip</item>
        <!-- PhoneNumber view -->
        <item name="menuNavigator.phoneNumberImageButtonPadding">1dip</item>
        <!-- List view -->
        <item name="menuNavigator.listTextViewPadding">2dip</item>
        <item name="menuNavigator.listTextViewTextColor">@android:color/black</item>
        <item name="menuNavigator.listTextViewTextSize">20dip</item>
        <item name="menuNavigator.listDividerColor">@android:color/darker_gray</item>
        <item name="menuNavigator.listDividerHeight">1px</item>
        <item name="menuNavigator.listFragmentBackground">@android:drawable/list_selector_background</item>
        <!-- List item view -->
        <item name="menuNavigator.listItemPadding">1dip</item>
        <item name="menuNavigator.listItemBackground">@android:color/white</item>
        <!-- Main fragment internals -->
        <item name="menuNavigator.fragmentBackground">@android:color/white</item>
        <!-- Info tex view -->
        <item name="menuNavigator.infoTextViewPadding">1dip</item>
        <item name="menuNavigator.infoTextViewTextColor">@android:color/black</item>
        <item name="menuNavigator.infoTextViewTextSize">12dip</item>
        <item name="menuNavigator.infoTextViewBackground">#CCCCCC</item>
    </style>
</resources>