<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android" android:versionCode="1"
	android:versionName="1.0" package="pl.polidea.navigator">
	<uses-sdk android:targetSdkVersion="11" android:minSdkVersion="7"></uses-sdk>
	<application android:label="@string/app_name" android:icon="@drawable/icon" android:name="pl.polidea.navigator.MenuNavigatorBaseApplication">
        <activity android:name="pl.polidea.navigator.SplashScreenActivity"
             android:theme="@style/MenuNavigatorSplashScreenTheme"
             android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="pl.polidea.navigator.MenuNavigatorBaseActivity" android:label="@string/app_name"
             android:theme="@style/MenuNavigatorTheme" >
        </activity>
	</application>
	<uses-permission android:name="android.permission.CALL_PHONE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
</manifest>
